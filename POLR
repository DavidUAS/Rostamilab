############### Specifying dataset
data <- readRDS("Uppsala.data.RDS")

################ Formatting data

data$TrainingSet$eGOS <- as.ordered(data$TrainingSet$eGOS)

data$TrainingSet$age <- as.numeric(data$TrainingSet$age)
data$TrainingSet$pupil <- as.factor(data$TrainingSet$pupil)
data$TrainingSet$motor <- as.factor(data$TrainingSet$motor)
data$TrainingSet$CT <- as.factor(data$TrainingSet$CT)

data$TestSet$eGOS <- as.ordered(data$TestSet$eGOS)

data$TestSet$age <- as.numeric(data$TestSet$age)
data$TestSet$pupil <- as.factor(data$TestSet$pupil)
data$TestSet$motor <- as.factor(data$TestSet$motor)
data$TestSet$CT <- as.factor(data$TestSet$CT)

str(data)

################ Setting up the model
library(MASS)

set.seed(0)

model <- polr(eGOS ~  age + motor + pupil + CT, data = data$TrainingSet, Hess = TRUE)

summary(model)

saveRDS(model, file="POLR.RDS")

